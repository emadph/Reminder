<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="1"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="1080">

    <shape
        android:shape="ring"
        android:thickness="2dp"
        android:useLevel="false">

        <gradient
            android:centerColor="#00584e93"
            android:centerY="0.5"
            android:endColor="#00584e93"
            android:startColor="#584e93"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>