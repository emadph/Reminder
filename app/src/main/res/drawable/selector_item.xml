<selector xmlns:android="http://schemas.android.com/apk/res/android" android:exitFadeDuration="@android:integer/config_longAnimTime">
    <item android:state_focused="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="2.0dip" android:color="@color/title4" />
            <solid android:color="@color/title4" />
        </shape>
    </item>
    <item android:state_focused="false" android:state_pressed="true">
        <shape android:shape="rectangle">

            <stroke android:width="2.0dip" android:color="@color/title4" />
            <solid android:color="@color/title4" />
        </shape>
    </item>
    <item android:state_focused="true" android:state_pressed="false">
        <shape android:shape="rectangle">

            <stroke android:width="2.0dip" android:color="@color/title3" />
            <solid android:color="@color/title3" />
        </shape>
    </item>
    <item android:state_focused="false" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/bg1" />

        </shape>
    </item>
</selector>